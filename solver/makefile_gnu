# Makefile # Malicious comments by Sagy go here
EXE = QUAFF_gnu

COMPILER = mpifort

########################## 	libraries setting
# MPI
MPI_FLAGS =
MPI_LIBS  = $(MPI_FLAGS)

# ScaLAPACK
LA_FLAGS  = -lscalapack -lopenblas
LA_LIBS   = $(LA_FLAGS)

LIBS = $(MPI_LIBS) $(LA_LIBS) $(MUMPS_LIBS)

########################## 	look for source files
SOURCE=src

########################## 	includers
MPI_INCL=
MKL_INCL=$(MKLROOT)/include
SRC_INCL=-I$(SOURCE)

########################## 	compiler flag
CMP_FLAG = CMP_GNU

########################## 	multi-threading
MT_FLAG = -fopenmp

########################## 	place obj files
OBJDIR=OBJ_$(EXE)
MKDIR_OBJ := $(shell mkdir -p $(OBJDIR))
OBJDIR_FLAG = -J$(OBJDIR)

##########################  compiler options
#debug -fallow-argument-mismatch
#FLAGS = -g -fbacktrace -fbounds-check -C $(MT_FLAG) $(OBJDIR_FLAG)
#optimal
FLAGS = -O3 $(MT_FLAG) $(OBJDIR_FLAG)

#--------------------------compile
include makefile_source

clean : 
	rm -rf $(EXE) $(OBJDIR)
